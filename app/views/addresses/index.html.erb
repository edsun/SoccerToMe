<h1>Listing addresses</h1>

<table>
  <tr>
    <th>Main address</th>
    <th>Street no</th>
    <th>Street name</th>
    <th>City</th>
    <th>Postal code</th>
    <th>Customer</th>
    <th>Province</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @addresses.each do |address| %>
  <tr>
    <td><%= address.main_address %></td>
    <td><%= address.street_no %></td>
    <td><%= address.street_name %></td>
    <td><%= address.city %></td>
    <td><%= address.postal_code %></td>
    <td><%= address.customer_id %></td>
    <td><%= address.province_id %></td>
    <td><%= link_to 'Show', address %></td>
    <td><%= link_to 'Edit', edit_address_path(address) %></td>
    <td><%= link_to 'Destroy', address, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

